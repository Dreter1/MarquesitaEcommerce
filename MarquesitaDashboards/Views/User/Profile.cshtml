@model Marquesita.Infrastructure.ViewModels.Dashboards.UserEditViewModel
@{
    ViewData["Title"] = "Perfil";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Perfil</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Perfil</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            @if(Model.ImageRoute != null){
                            <img src="~/Images/Users/Employees/@Model.ImageRoute"
                                 class="profile-user-img img-fluid img-circle"
                                 asp-append-version="true" />
                            }
                            else{
                            <img class="profile-user-img img-fluid img-circle"
                                 src="~/template/dist/img/user4-128x128.jpg"
                                 alt="User profile picture">
                            }
                        </div>

                        <h3 class="profile-username text-center">@Model.FirstName @Model.LastName</h3>

                        <p class="text-muted text-center">@ViewBag.UserRole</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Celular</b> <a class="float-right">@Model.Phone</a>
                            </li>
                            <li class="list-group-item">
                                <b>Correo</b> <a class="float-right">@Model.Email</a>
                            </li>
                            <li class="list-group-item">
                                <b>Fecha de nacimiento</b> <a class="float-right">@Model.DateOfBirth.ToShortDateString()</a>
                            </li>
                            <li class="list-group-item">
                                <b>Fecha de Ingreso</b> <a class="float-right">@Model.RegisterDate.ToShortDateString()</a>
                            </li>
                        </ul>
                        <a asp-controller="User" asp-action="ResetPassword" class="btn btn-warning btn-block"><b>Cambia tu contraseña</b></a>
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Ajustes</a></li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane" id="settings">
                                <form class="form-horizontal">
                                    <div class="form-group row">
                                        <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <input disabled type="email" class="form-control" asp-for="FirstName" placeholder="Name">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <input disabled type="email" class="form-control" asp-for="LastName" placeholder="Email">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <input disabled type="text" class="form-control" asp-for="Email" placeholder="Name">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Phone" class="col-sm-2 col-form-label">Experience</label>
                                        <div class="col-sm-10">
                                            <input disabled type="text" class="form-control" asp-for="Phone" placeholder="Name">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="offset-sm-2 col-sm-10">
                                            <a asp-controller="User" asp-action="EditProfile" asp-route-Id="@ViewBag.UserId" class="btn btn-warning"><i class="fas fa-user-edit"></i> Editar</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

