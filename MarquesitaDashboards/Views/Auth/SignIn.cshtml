@model Marquesita.Infrastructure.ViewModels.Dashboards.LoginViewModel
@{
    ViewData["Title"] = "Log In";
    Layout = "_LoginLayout";

}

<div class="login-logo">
    <a asp-controller="Auth" asp-action="SignIn"><b>La </b>Marquesita</a>
</div>
<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Ingrese lo campos</p>

        <form asp-controller="Auth" asp-action="SignIn" method="post">
            <div class="form-group">
                <label><i class="fas fa-user"></i> Usuario </label>
                <input type="text" asp-for="Username" class="form-control" placeholder="usuario">
            </div>
            <div class="form-group">
                <label><i class="fas fa-lock"></i> Contraseña</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="******">
            </div>
            <input type="hidden" name="returnUrl" value="@Url.ActionContext.HttpContext.Request.Query["ReturnUrl"]" />
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
            </div>
        </form>
    </div>
</div>

<style>
    .alert.alert-danger > ul {
        margin: 0
    }
</style>

