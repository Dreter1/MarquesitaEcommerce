}

<!-- page -->
<div class="services-breadcrumb">
    <div class="agile_inner_breadcrumb">
        <div class="container">
            <ul class="w3_short">
                <li>
                    <a asp-controller="Home" asp-action="Index">Home</a>
                    <i>|</i>
                </li>
                <li>Carrito</li>
            </ul>
        </div>
    </div>
