<div class="wrapper">
    <div class="panel panel-default">
        <div class="panel-body itemsFiltrar">
            @foreach (var product in Model)
            {
                if (product.Stock > 0 && product.IsActive)
                {
                    <div class="col-xs-4 product-men">
                        <div class="men-pro-item simpleCart_shelfItem">
                            <div class="men-thumb-item">
                                @if (product.ImageRoute != null)
                                {
                                    <img src="@ViewBag.Image@product.ImageRoute" alt="Product Image">
                                }
                                else
                                {
                                    <img src="~/DashboardTemplate/dist/img/user4-128x128.jpg" alt="">
                                }
                                <div class="men-cart-pro">
                                    <div class="inner-men-cart-pro">
                                        <a href="#" class="link-product-add-cart">Vista rápida</a>
                                    </div>
                                </div>
                            </div>
                            <div class="item-info-product ">
                                <h4>
                                    <a href="#">@product.Name</a>
                                </h4>
                                <div class="info-product-price">
                                    <span class="item_price">S./ @product.UnitPrice</span>
                                </div>
                                <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out" data-id="@product.Id" onclick="addProductToCart(this)">
                                    <input type="submit" name="submit" value="Añadir al Carrito" class="button" />
                                </div>
                                <br />
                                <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out" data-id="@product.Id" onclick="addProductToWishList(this)">
                                    <input type="submit" name="submit" value="Añadir a lista deseos" class="button" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
