@model Marquesita.Infrastructure.ViewModels.Ecommerce.Clients.ClientViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="contact-w3l">
    <div class="container">
        <h3 class="tittle-w3l">
            Editar mi Perfil
            <span class="heading-style">
                <i></i>
                <i></i>
                <i></i>
            </span>
        </h3>

        <div class="contact agileits">
            <div class="contact-agileinfo">
                <div class="contact-form wthree">
                    <div class="modal-body modal-body-sub_agile">
                        <div class="main-mailposi">
                            <span class="fa fa-address-card-o" aria-hidden="true"></span>
                        </div>
                        <div class="content">
                            <div class="row">
                                <h1 class="profile-username text-center">Nombre</h1>
                                <hr />

                                <div class="col-lg-4 order-lg-1 text-center">
                                    <img src="//placehold.it/150" class="profile-user-img img-fluid img-circle" alt="User profile picture">

                                    <form>
                                        <div class="form-group">
                                            <label for="exampleFormControlFile1"></label>
                                            <input type="file" class="form-control-file" id="exampleFormControlFile1" value="Cambiar foto">
                                        </div>
                                    </form>

                                </div>

                                <div class="col-lg-8 order-lg-2">
                                    <div class="tab-content py-4">
                                        <form role="form">
                                            <div class="form-group row">
                                                <label class="col-lg-3 col-form-label form-control-label">Nombres</label>
                                                <div class="col-lg-9">
                                                    <input class="form-control" type="text" value="Jane">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-lg-3 col-form-label form-control-label">Apellido</label>
                                                <div class="col-lg-9">
                                                    <input class="form-control" type="text" value="Bishop">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-lg-3 col-form-label form-control-label">Email</label>
                                                <div class="col-lg-9">
                                                    <input class="form-control" type="email" value="email@gmail.com">
                                                </div>
                                            </div>


                                            <div class="form-group row">
                                                <label class="col-lg-3 col-form-label form-control-label">Direccion</label>
                                                <div class="col-lg-9">
                                                    <input class="form-control" type="text" value="" placeholder="Calle">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-lg-3 col-form-label form-control-label"></label>
                                                <div class="col-lg-6">
                                                    <input class="form-control" type="text" value="" placeholder="Ciudad">
                                                </div>
                                                <div class="col-lg-3">
                                                    <input class="form-control" type="text" value="" placeholder="Provincia">
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-lg-3 col-form-label form-control-label">Usuario</label>
                                                <div class="col-lg-9">
                                                    <input class="form-control" type="text" value="janeuser">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-lg-3 col-form-label form-control-label">Contraseña</label>
                                                <div class="col-lg-9">
                                                    <input class="form-control" type="password" value="11111122333">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-lg-3 col-form-label form-control-label">Confirmar Contraseña</label>
                                                <div class="col-lg-9">
                                                    <input class="form-control" type="password" value="11111122333">
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group col-12">
                                                    <label asp-for="DateOfBirth"></label>
                                                    <input asp-for="DateOfBirth" type="date" class="form-control datetimepicker-input" />
                                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <a class="btn btn-danger" asp-controller="Client" asp-action="MyProfile" title="Regresar">Cancelar</a>
                                            <button type="submit" class="btn btn-warning" title="Actualizar">Guardar Cambios</button>
                                        </form>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

