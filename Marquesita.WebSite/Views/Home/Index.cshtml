        <div class="item active">
            <div class="container">
                <div class="carousel-caption">
                    <h3>
                        Quesos
                    </h3>
                    <p>
                        Los mejores de <span>Cajamarca</span>
                    </p>
                    <a class="button2" asp-controller="Product" asp-action="Index">Comprar ahora</a>
                </div>
            </div>
        </div>
        <div class="item item2">
            <div class="container">
                <div class="carousel-caption">
                    <h3>
                        Manjarblanco
                    </h3>
                    <p>
                        El mejor de <span>Cajamarca</span>
                    </p>
                    <a class="button2" asp-controller="Product" asp-action="Index">Comprar ahora</a>
                </div>
            </div>
        </div>
        <div class="item item3">
            <div class="container">
                <div class="carousel-caption">
                    <h3>
                        Rosquitas
                    </h3>
                    <p>
                        Perfectas para una compartir
                    </p>
                    <a class="button2" asp-controller="Product" asp-action="Index">Comprar ahora</a>
                </div>
            </div>
        </div>
