        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Siguiente</span>
    </a>
</div>

<div class="ads-grid">
    <div class="container">
        <h3 class="tittle-w3l">
            Top Productos
            <span class="heading-style">
                <i></i>
                <i></i>
                <i></i>
            </span>
        </h3>
        <div class="side-bar col-md-3">
            <div class="search-hotel">
                <h3 class="agileits-sear-head">Busca aquí..</h3>
                <form action="#" method="post">
                    <input type="search" placeholder="Nombre del producto" name="search">
                </form>
            </div>
            <div class="deal-leftmk left-side">
                <h3 class="agileits-sear-head">Categorias</h3>
                <ul>
                    <li>
                        <a asp-controller="Product" asp-action="Index"><span class="span"><i class="fas fa-dot-circle"></i> Todos los productos</span></a>
                    </li>
                    @foreach (var category in ViewBag.Categorys)
                    {
                        <li>
                            <a asp-controller="Category" asp-action="Detail" asp-route-categoryId="@category.Id"><span class="span"><i class="fas fa-dot-circle"></i> @category.Name</span></a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="agileinfo-ads-display col-md-9" id="ProducListTake10">         
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        HomeIndexActiveLink();
        getProductPanelListTake10();
    });
</script>

