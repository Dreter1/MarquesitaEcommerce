@model Marquesita.Infrastructure.ViewModels.Ecommerce.Clients.ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="contact-w3l">
    <div class="container">
        <h3 class="tittle-w3l">
            ¿Olvidaste tu contraseña?
            <span class="heading-style">
                <i></i>
                <i></i>
                <i></i>
            </span>
        </h3>
        <div class="contact agileits">
            <div class="contact-agileinfo">
                <div class="contact-form wthree">
                    <div class="modal-body modal-body-sub_agile">

                        <div class="modal_body_left modal_body_left1">
                            <h3 class="text-center">
                                No se preocupe. Ingrese su correo electrónico y le enviaremos un enlace para restablecer su contraseña.
                            </h3>
                            <div class="clearfix"></div>
                        </div>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-12">
                                <form asp-controller="Home" asp-action="ForgotPassword">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"> Correo Electrónico</label>
                                        <input  asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group text-center">
                                        <input type="submit" value="Restablecer la contraseña" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

