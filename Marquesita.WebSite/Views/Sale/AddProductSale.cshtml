@model Marquesita.Infrastructure.ViewModels.Dashboards.Sales.AddItemViewModel
@if (TempData.Peek("stockError") != null)
{
    <div class="alert alert-warning alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h5><i class="icon fas fa-exclamation-triangle"></i> ¡Alerta!</h5>
        @TempData.Peek("stockError")
    </div>
}
@if (TempData.Peek("error") != null)
{
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h5><i class="icon fas fa-ban"></i> ¡Alerta!</h5>
        @TempData.Peek("error")
    </div>
}
<div class="form-group">
    <label asp-for="Productid"></label>
    <div class="select2-blue">
        <select asp-for="Productid" id="productId" class="form-control select2bs4" data-dropdown-css-class="select2-blue" style="width: 100%;">
            @foreach (var product in ViewBag.Product)
            {
                <option value="@product.Id">@product.Name</option>
            }
        </select>
    </div>
    <span asp-validation-for="Productid" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Quantity" class="control-label"></label>
    <input asp-for="Quantity" type="text" id="Quantity" value="1" class="form-control positive-integer" />
    <span asp-validation-for="Quantity" class="text-danger"></span>
</div>
<input hidden name="userId" id="userId" value="@ViewBag.UserId" />
<div class="form-group">
    <button type="submit" onclick="addProductToList()" class="btn btn-primary">Agregar</button>
</div>


<script>
    $(document).ready(function () {
        $('.select2bs4').select2({
            theme: 'bootstrap4'
        });
    });
</script>
<script src="~/js/Validaciones.js"></script>

