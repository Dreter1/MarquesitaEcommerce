@model Marquesita.Infrastructure.ViewModels.Dashboards.Sales.AddItemViewModel
@if (TempData.Peek("stockError") != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@TempData.Peek("stockError")</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData.Peek("error") != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>@TempData.Peek("error")</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<form asp-controller="Sale" asp-action="AddProductSale">
    <div class="form-group">
        <label asp-for="Productid"></label>
        <div class="select2-blue">
            <select asp-for="Productid" class="form-control select2bs4" data-dropdown-css-class="select2-blue" style="width: 100%;">
                @foreach (var product in ViewBag.Product)
                {
                    <option value="@product.Id">@product.Name</option>
                }
            </select>
        </div>
        <span asp-validation-for="Productid" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control positive" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <input hidden name="userId" value="@ViewBag.UserId" />
    <div class="form-group">
        <input type="submit" value="Agregar" class="btn btn-primary" />
    </div>
</form>

<script>
    $('.select2bs4').select2({
        theme: 'bootstrap4'
    })
</script>

