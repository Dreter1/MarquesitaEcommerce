@*@model IEnumerable<Marquesita.Models.Business.Sale>*@

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutDashboard";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Ventas</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Sale" asp-action="Index">Ventas</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</div>


<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> Cliente </th>
            <th> Fecha </th>
            <th> Tipo de pago </th>
            <th> Tipo de venta </th>
            <th> Estado </th>
            <th> Monto Total </th>
            <th> Vendedor </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
        <tr>
            <th>
                @await Component.InvokeAsync("DashboardEmployeeInfo", new { userId = sale.UserId })
            </th>

            <td>@sale.Date</td>
            <td>@sale.PaymentType</td>
            <td>@sale.TypeOfSale</td>
            <td>@sale.SaleStatus</td>
            <td>@sale.TotalAmount</td>
            <td>@await Component.InvokeAsync("DashboardEmployeeInfo", new { userId = sale.EmployeeId })</td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@sale.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@sale.Id" class="btn btn-info">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>



