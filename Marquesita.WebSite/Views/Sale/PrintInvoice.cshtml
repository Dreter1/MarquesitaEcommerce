
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" href="~/Images/LosAlpesFavicon32.png">
    <title>La Marquesita | Imprimir boleta</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/DashboardTemplate/dist/css/adminlte.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <section class="invoice">
            <div class="row">
                <div class="col-12">
                    <div class="invoice p-3 mb-3">
                        <div class="row">
                            <div class="col-12">
                                <h4>
                                    <img src='https://i.ibb.co/VNmddvj/Los-Alpes-Logo.png'
                                         alt='LosAlpes-Logo' style='width: 125px; height: 120px; border: 0;'>
                                    <small class="float-right">Fecha: @DateTime.Now</small>
                                </h4>
                            </div>
                        </div>
                        <div class="row invoice-info">
                            <div class="col-sm-4 invoice-col">
                                De
                                <address>
                                    <strong>Los Alpes E.I.R.L.</strong><br>
                                    Jr. Junín Nro. 965 (Barrio San Pedro)<br>
                                    Telefono: (076)362287<br>
                                    Celulares: 941342093<br>
                                    Correo: losalpes.cajamarca@gmail.com
                                </address>
                            </div>
                            <div class="col-sm-4 invoice-col">
                                Para
                                <address>
                                    <strong>@ViewBag.Client.FirstName @ViewBag.Client.LastName</strong><br>
                                    @ViewBag.clientAddress<br>
                                    Phone: @ViewBag.Client.Phone<br>
                                    Email: @ViewBag.Client.Email
                                </address>
                            </div>
                            <div class="col-sm-4 invoice-col">
                                <b>Invoice #007612</b><br>
                                <br>
                                <b>ID de Boleta:</b> @ViewBag.Sale.Id<br>
                                <b>Fecha de pago:</b> @ViewBag.Sale.Date<br>
                                <b>Tipo de Pago:</b> @ViewBag.Sale.PaymentType
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th class='text-center'>Orden</th>
                                            <th class='text-center'>Producto</th>
                                            <th class='text-center'>Precio</th>
                                            <th class='text-center'>Cantidad</th>
                                            <th class='text-center'>Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int count = 0;
                                            decimal igv = Math.Round((ViewBag.Sale.TotalAmount * Convert.ToDecimal(0.18)), 2);
                                            decimal subtotal = Math.Round((ViewBag.Sale.TotalAmount - igv), 2);
                                        }
                                        @foreach (var detail in ViewBag.saleDetail)
                                        {
                                            count += 1;
                                            <tr>
                                                <td>@count</td>
                                                <td>@detail.Product.Name</td>
                                                <td>@detail.UnitPrice</td>
                                                <td>@detail.Quantity</td>
                                                <td>S/. @detail.Subtotal</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6">
                            </div>
                            <div class="col-6">
                                <div class="table-responsive">
                                    <table class="table">
                                        <tr>
                                            <th style="width:50%">Subtotal:</th>
                                            <td>S/. @subtotal</td>
                                        </tr>
                                        <tr>
                                            <th>IGV (18%)</th>
                                            <td>S/. @igv</td>
                                        </tr>
                                        <tr>
                                            <th>Total:</th>
                                            <td>S/. @ViewBag.Sale.TotalAmount</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>


    <script type="text/javascript">
        window.addEventListener("load", window.print());
    </script>
</body>
</html>


