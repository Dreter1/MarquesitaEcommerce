@model Marquesita.Models.Business.Sale
@{
    ViewData["Title"] = "Nueva Venta";
    Layout = "_LayoutDashboard";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Ventas</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Sale" asp-action="Index">Ventas</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<input hidden id="userId" name="userId" value="@ViewBag.User.Id" />
<section class="content">
    <div class="container-fluid">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Realizar Venta</h3>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card-body">
                        <div>
                            <h1>Cliente: @ViewBag.User.FirstName @ViewBag.User.LastName</h1>
                        </div>
                        <div class="col-12" id="vistaPro">
                        </div>
                        <div class="col-12" id="vistaTempItems">

                        </div>
                        <div class="fa-pull-left">
                            <a asp-controller="Sale" asp-action="AddClientSale" class="btn btn-primary">Regresar</a>
                        </div>
                        <div class="fa-pull-right">
                            <a asp-controller="Sale" asp-action="CreateSale" asp-route-userId="@ViewBag.User.Id" class="btn btn-primary">Confirmar Pedido</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        getPorductList();
        getDetailTempList();
    });
</script>



